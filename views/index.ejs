  <div class="container">
    
   <div class="row g-5">
    <a href="/new">
      <button class="btn btn-primary" type="button">
      NEW POST
      </button>
  </a> 
    <div class="col-md-8">

      <article class="blog-post">
        <% if (locals.anime) {%>
            <% anime.forEach((a) => { %>
                <h3 class="pb-4 mb-4 fst-italic border-bottom"> <%= a.title %> </h3>
                <div class="post-header mb-4">
                    <img class="mr-4"src="<%= a.image %>" style="width: 300px; height: auto;" alt= "<%= a.title %>">
                    <div style="margin-left: 20px">
                        <p class="blog-post-meta">
                          Genre: 
                          <% a.genres.forEach((genre, index) => { %>
                              <%= genre %><%= (index < a.genres.length - 1) ? ', ' : '' %>
                          <% }) %>
                        </p>
                        <p class="blog-post-meta"> Premiered: <%= a.season  %> <%= a.release_year %> </p>
                        <p class="blog-post-meta"> My rating: <%= a.rating %> / 10 </p>
                        <p class="blog-post-meta"> Episodes: <%= a.nb_episodes %> </p>
                        <p> Date: <%= a.post_date.toISOString().slice(0, 10) %> </p>
                    </div>
                </div>
                <h5> Summary: </h5>
                <em> <%= a.summary %> </em> 
                <p></p>
                 
                <h5>Personal Thoughts:</h5>
                <em> <%= a.personal_thoughts %> </em>
                
                <div class="edit-delete-row mt-3">
                  <a href="/edit/<%= a.id%>">
                  <button class="btn btn-primary">EDIT
                  </button>
                  </a>
                  <form action="/delete/<%= a.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                  </form>
                </div>
                <hr>
                <hr>
            <% }); %>
        <%} %>
    </div>

    <div class="col-md-4">
      <div class="position-sticky" style="top: 2rem;">
        <div class="p-4 mb-3 bg-body-tertiary rounded">
          <h4 class="fst-italic">About</h4>
          <p class="mb-0">Customize this section to tell your visitors a little bit about your publication, writers, content, or something else entirely. Totally up to you.</p>
        </div>

        <div class="container">
          <h4 class="fst-italic">Sort by:</h4>
          <ul class="list-unstyled">
            <li>
              <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="#">
                Alphabetical
              </a>
            </li>
            <li>
              <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="#">
                Newest
              </a>
            </li>
            <li>
